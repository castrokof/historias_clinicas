# ==================================
# CONFIGURACIÓN DE APLICACIÓN
# ==================================
APP_NAME="Sistema Historias Clínicas"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_LOG_LEVEL=error
APP_URL=https://your-domain.com

# ==================================
# BASE DE DATOS
# ==================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=historias_clinicas
DB_USERNAME=db_user
DB_PASSWORD=secure_password_here

# ==================================
# DRIVERS Y CACHE
# ==================================
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
QUEUE_DRIVER=redis

# ==================================
# REDIS
# ==================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=predis

# ==================================
# CORREO ELECTRÓNICO
# ==================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# ==================================
# SEGURIDAD - CORS
# ==================================
# Especificar dominios permitidos separados por comas
# Ejemplo: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,X-Requested-With,Authorization,Accept,Origin,X-CSRF-TOKEN

# ==================================
# CONTRASEÑAS DE SEEDERS
# ==================================
# IMPORTANTE: Cambiar estas contraseñas antes de ejecutar seeders en producción
ADMIN_DEFAULT_PASSWORD=ChangeMe2024!
DEV_DEFAULT_PASSWORD=ChangeMe2024!
MEDIC_DEFAULT_PASSWORD=ChangeMe2024!

# ==================================
# SERVICIOS EXTERNOS
# ==================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# ==================================
# CONFIGURACIÓN OPCIONAL
# ==================================
# TIMEZONE=America/Bogota
# LOCALE=es
# FALLBACK_LOCALE=es
